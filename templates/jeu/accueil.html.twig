            border: 1px solid #e2e8f0;
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .card-body h2 {
            color: #2c5282;
            font-size: 1.5rem;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .card-body p {
            color: #4a5568;
            font-size: 1.1rem;
            line-height: 1.6;
            margin-bottom: 15px;
        }

        .btn-primary {
            background-color: #3182ce; /* Bleu vif */
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 10px;
            color: white;
            text-decoration: none;
            display: inline-block;
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .btn-primary:hover {
            background-color: #2c5282;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(49, 130, 206, 0.2);
        }


        p {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }
        .example-box {
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            padding: 20px;
            margin: 20px 0;
            background-color: #f8fafc;
            text-align: left;
        }
        .example-content p {
            margin: 15px 0;
        }

        .note {
            margin-top: 20px;
            line-height: 1.6;
        }

        /* Responsive design */
        @media (max-width: 480px) {
            .container {
                padding: 20px;
            }

            h1 {
                font-size: 1.8rem;
            }

            .card-body h2 {
                font-size: 1.3rem;
            }

            .card-body p {
                font-size: 1rem;
            }

            .btn-primary {
                padding: 10px 25px;
                font-size: 1rem;
            }
        }
        .example-box {
            border: 1px solid #e2e8f0;
            border-radius: 10px;
            padding: 15px;
            margin: 15px auto; /* centr√© */
            background-color: #f8fafc;
            text-align: left;
            cursor: pointer;
            max-width: 400px;
            transition: all 0.3s ease;
        }

        .example-box:hover {
            background-color: #f0f0f0;
        }

        .example-content {
            display: none;
            font-size: 0.9rem;
            margin-top: 10px;
        }

        .example-box.active .example-content {
            display: block;
        }

        .example-box h4 {
            margin: 0;
            font-size: 1rem;
            color: #4a5568;
            text-align: center;
            position: relative;
        }

        .example-box h4::after {
            content: '‚ñº';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            transition: transform 0.3s ease;
        }

        .example-box.active h4::after {
            transform: translateY(-50%) rotate(180deg);
        }

        .rules {
            margin-top: 15px;
            padding-left: 20px;
        }

        .rules li {
            margin-bottom: 10px;
        }
        h1 {
            font-family: 'Poppins', sans-serif; /* Police Poppins */
            color: #2c5282; /* Bleu fonc√© √©l√©gant */
            font-size: 1.5rem; /* Taille r√©duite */
            font-weight: 700;
            text-align: center;
            letter-spacing: 1px;
            position: relative;
            display: inline-block;
            animation: fadeInUp 1s ease-out forwards;
        }

        h1::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 4px;
            background-color: #3182ce; /* Bleu vif */
            bottom: -8px;
            left: 0;
            transform: scaleX(0);
            transform-origin: bottom right;
            animation: scaleIn 0.6s ease-out forwards;
        }
        @keyframes fadeInUp {
            0% {
                opacity: 0;
                transform: translateY(30px);
            }
            100% {
                opacity: 1;
                transform: translateY(0);
            }
        }


        @keyframes scaleIn {
            0% {
                transform: scaleX(0);
            }
            100% {
                transform: scaleX(1);
            }
        }

    </style>
{% endblock %}

