{% block body %}
    <div class="result-container">
        <h1>
            {% if parties_jouees >= 4 %}
                🏆 Mission Accomplie ! 🏆
            {% elseif isTimeout %}
                ⏰ Temps Écoulé ! ⏰
            {% elseif isSuccess %}
                ✨ Découverte Réussie ! ✨
            {% else %}
                Code Non Valide
            {% endif %}
        </h1>

        {% if parties_jouees >= 4 %}
            <div class="score">
                <p>🌿 Vous avez joué avec toutes les plantes de notre collection ! 🌿</p>
                <h2>🏆 Score Final : {{ score }} points</h2>
                <p>📚 Parties jouees : {{ parties_jouees }}/4 plantes </p>
                <div class="new-game-button">
                    <a href="{{ path('accueil') }}" class="btn btn-primary">🏠 Retour à l'Accueil</a>
                </div>
            </div>
        {% elseif isTimeout %}
            <div class="failure-result">
                <img src="{{ asset('images/game-over.png') }}" alt="Game Over" />
                <div class="score">
                    <p>⏰ Le temps s'est écoulé ! Vous avez joué {{ parties_jouees|default(0) }} parties en 5 minutes.</p>
                    <h2>🎯 Score Final : {{ score }} points</h2>
                    <div class="new-game-button">
                        <a href="{{ path('accueil') }}" class="btn btn-primary">🔄 Nouvelle Exploration</a>
                    </div>
                </div>
            </div>
        {% else %}
            {% if isSuccess %}
                <div class="success-result">
                    <div class="padlock-container">
                        <div class="padlock">
                            <div class="lock-body"></div>
                            <div class="lock-hook"></div>
                        </div>
                        <img src="{{ asset('images/' ~ plante.image) }}" alt="{{ plante.nom }}" class="plant-image" />
                    </div>
                    <p>✨ Magnifique découverte ! Vous avez identifié : {{ plante.nom }} ✨</p>
                </div>
            {% else %}
                <div class="failure-result">
                    <img src="{{ asset('images/plante/sauvage.png') }}" alt="sauvage"/>
                    <p>🔍 Code non reconnu... Réessayer avec d'autres plantes </p>
                </div>
            {% endif %}

            <div class="score">
                <h2>🎯 Score actuel : {{ score }} points</h2>
                <p>📚 Nombre de parties jouées : {{ parties_jouees }}/4</p>
            </div>

            <div class="replay-button">
                <a href="{{ path('commencer_jeu') }}" class="btn btn-primary">🔄 Une autre partie</a>
            </div>
        {% endif %}
    </div>
{% endblock %}