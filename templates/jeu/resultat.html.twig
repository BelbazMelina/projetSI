        /* Styles pour le cadenas et l'animation */
        /* Modifiez les styles du padlock-container */
        .padlock-container {
            position: relative;
            width: 200px;
            height: 250px; /* Augmenté pour plus d'espace */
            margin: 0 auto 40px; /* Ajout d'une marge en bas */
            perspective: 1000px;
        }

        /* Ajustez la position de l'image */
        .plant-image {
            position: absolute;
            width: 100%;
            height: 100%;
            object-fit: contain;
            opacity: 0;
            animation: revealImage 2s 1s forwards;
            top: 0; /* Assurez-vous que l'image commence en haut */
        }

        /* Ajoutez un conteneur flex pour la success-result */
        .success-result {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 30px; /* Espace entre les éléments */
            margin: 25px 0;
        }

        /* Ajustez le style du paragraphe */
        .success-result p {
            margin-top: 20px; /* Espace supplémentaire au-dessus du texte */
            width: 100%; /* Utilise toute la largeur disponible */
            clear: both; /* Évite les chevauchements */
        }

        .lock-body {
            position: absolute;
            width: 80px;
            height: 100px;
            background: #3182ce;
            border-radius: 10px;
            left: 50%;
            top: 50%;
            transform: translate(-50%, -30%);
        }

        .lock-hook {
            position: absolute;
            width: 60px;
            height: 60px;
            border: 15px solid #3182ce;
            border-radius: 50px 50px 0 0;
            left: 50%;
            top: 20%;
            transform: translateX(-50%);
            transform-origin: bottom;
        }


        @keyframes unlockAnimation {
            0% {
                transform: rotateY(0);
            }
            50% {
                transform: rotateY(0);
            }
            100% {
                transform: rotateY(90deg);
            }
        }

        @keyframes revealImage {
            0% {
                opacity: 0;
                transform: scale(0.8);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Ajustements responsifs */
        @media (max-width: 480px) {
            .padlock-container {
                width: 150px;
                height: 150px;
            }

            .lock-body {
                width: 60px;
                height: 75px;
            }

            .lock-hook {
                width: 45px;
                height: 45px;
                border-width: 12px;
            }
